<div class="col-sm-4">
  {{#link-to 'stories' story.id}}
  <h5>{{story.category}}</h5>
  <img src={{story.image_url}} alt={{story.headline_short}}/>
  <h2>{{story.headline_short}}</h2>
  {{/link-to}}
  <div class="byline">
    <hr>
    <p class="detail author pull-left">{{story.author}}</p>
    <p class="detail timestamp pull-right">{{moment-from-now  story.creation_datetime}}</p>
  </div>
</div>
<div class="clearfix visible-md-block visible-sm-block visible-xs-block"></div>
